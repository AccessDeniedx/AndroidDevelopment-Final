<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLoginBG"
    xmlns:android="http://schemas.android.com/apk/res/android">

    //logo
    <ImageView
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:src="@drawable/qqlogo"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="40dp"
        />

    <!--<EditText
        android:id="@+id/UserNumber"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/translucent"
        android:layout_marginBottom="15dp"
        />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/namelayout"
        >

        <EditText
            android:id="@+id/UserNumber"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:background="@drawable/translucent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="45dp"
            android:layout_toLeftOf="@+id/imgbtn"
            android:hint="请输入用户名"

            />

        <ImageButton
            android:id="@+id/imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/pull_down"
            />


    </LinearLayout>



    <EditText
        android:id="@+id/Password"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:background="@drawable/translucent"
        android:layout_marginBottom="30dp"
        android:hint="请输入密码"
        android:gravity="center"
    />

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/remember_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="18sp"
            android:text="记住密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/login_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/qqlogbutton"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/find_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <View
            android:layout_width="1dip"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#d7d9de"
            />

        <TextView
            android:id="@+id/phone_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务器注册"
            android:textSize="15dp"
            android:textColor="#000"
            android:textStyle="bold" />

        <View
            android:layout_width="1dip"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#d7d9de"
            />

        <TextView
            android:id="@+id/new_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新用户注册"
            android:textSize="15dp"
            android:textColor="#000"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>